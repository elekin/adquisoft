                    <TextBox x:Name="text_rom_min" Grid.Column="1" Margin="7" Grid.Row="3" TextWrapping="Wrap" Text="" Grid.ColumnSpan="2" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
